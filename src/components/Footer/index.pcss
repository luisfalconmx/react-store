.Footer {
  margin-top: auto;
  padding: 50px 150px 54px;
  background-color: var(--color-light);
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 40px 10px;

  @media (prefers-color-scheme: dark) {
    background-color: var(--color-night);
  }

  &__Identity {
    width: fit-content;
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  &__Logo {
    margin-right: 22px;
  }

  &__Title {
    font-size: 1.375rem;
    line-height: 1.664rem;
    font-weight: 600;
  }

  &__Description {
    font-size: 1.125rem;
    line-height: 2rem;
    font-weight: 400;
    margin-top: 10px;
    text-align: right;
  }

  &__Leyend {
    font-size: 0.875;
    line-height: 1.125rem;
    font-weight: 400;

    a {
      text-decoration: underline;
    }
  }

  &__Social {
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  &__SocialIcon {
    margin-left: 15px;
  }
}
