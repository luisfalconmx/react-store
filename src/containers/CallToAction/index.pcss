.CallToAction {
  max-width: 748px;
  margin: 0 auto 120px;
  display: flex;
  flex-direction: column;
  align-items: center;

  &__Title {
    font-size: 2.875rem;
    font-weight: 900;
    text-align: center;
    line-height: 4rem;
    margin: 0 0 28px;
  }

  &__Description {
    font-size: 20px;
    line-height: 34px;
    font-weight: 400;
    text-align: center;
    margin: 0 0 60px;
  }
}
