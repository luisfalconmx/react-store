.ProductsList {
  display: grid;
  grid-template-columns: 1fr;
  gap: 26px 37px;
  padding: 0 20px;
  margin: -30px 0 120px;

  @media (min-width: 768px) {
    grid-template-columns: repeat(2, 1fr);
    padding: 0 20px;
    margin: -66px 0 120px;
  }

  @media (min-width: 1200px) {
    grid-template-columns: repeat(3, 1fr);
    padding: 0 42px;
    max-width: 1300px;
    margin-left: auto;
    margin-right: auto;
  }
}
