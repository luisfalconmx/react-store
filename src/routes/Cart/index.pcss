.Cart {
  &__Track {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    margin: 60px auto 120px;
  }

  &__Total {
    max-width: 1024px;
    border-top: 1px solid var(--color-disabled);
    padding: 35px 0 0;
    margin: 0 auto 90px;
    display: flex;
    justify-content: flex-end;
    font-size: 32px;
    font-weight: 400;
    line-height: 38.73px;
  }

  &__TotalNumber {
    margin: 0 30px 0 34px;
    font-weight: 700;
  }
}
